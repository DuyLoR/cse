@using CSE_website
@model AccountViewModel
@{
    ViewData["Title"] = "Cập nhật thông tin";
}

<div class="site-content">
    <div class="site-content-title">
        <h3>Cập nhật thông tin</h3>
    </div>

    <form method="post">
        @Html.AntiForgeryToken()
        <div class="site-content-main">
            <div class="mb-3 row site-content-item" hidden>
                <label for="inputAccId" class="col-sm-2 col-form-label">ID Tài khoản:</label>
                <div class="col-sm-10">
                    <input type="text" readonly disabled class="form-control"
                           id="inputAccId" asp-for="Id" value="@Model.Id">
                </div>
            </div>
            <div class="mb-3 row site-content-item">
                @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
                <label for="inputEmail" class="col-sm-2 col-form-label">Mật khẩu:<span class="star-maker">*</span></label>
                <div class="col-sm-10">
                    <input type="password" asp-for="Password" value="@Model.Password" class="form-control" id="inputPass">
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="mb-3 row site-content-item">
                <label for="inputEmail" class="col-sm-2 col-form-label">Nhập lại mật khẩu:<span class="star-maker">*</span></label>
                <div class="col-sm-10">
                    <input type="password" asp-for="ConfirmPassword" value="@Model.ConfirmPassword" class="form-control" id="inputPass">
                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="site-content-footer">
            <div class="button-admin">
                <button type="submit" asp-controller="Account" asp-action="ChangePassword" class="button-admin-link">Lưu lại</button>
            </div>
            <div class="button-admin">
                <a asp-controller="Account" asp-action="Index" class="button-admin-link">Quay lại</a>
            </div>
        </div>
    </form>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}