@{
    ViewData["Title"] = "Cập nhật thông tin";
}

<div class="site-content">
    <div class="site-content-title">
        <h3>Cập nhật thông tin</h3>
    </div>

    <form>
        <div class="site-content-main">
            <div class="mb-3 row site-content-item">
                <label for="inputPostId" class="col-sm-2 col-form-label">ID Bài viết:</label>
                <div class="col-sm-10">
                    <input type="text" readonly disabled class="form-control" id="inputPostId" placeholder="ID Bài viết">
                </div>
            </div>
            <div class="mb-3 row site-content-item">
                <label for="inputTitle" class="col-sm-2 col-form-label">Tiêu đề:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputTitle" placeholder="Tiêu đề">
                </div>
            </div>
            <div class="mb-3 row site-content-item">
                <label for="inputImage" class="col-sm-2 col-form-label">Ảnh:</label>
                <div class="col-sm-10">
                    <input class="form-control" type="file" id="inputImage" onchange="readURL(this);">
                </div>
            </div>
            <div class="mb-3 row site-content-item">
                <label for="editorContent" class="col-sm-2 col-form-label">Nội dung: </label>
                <div class="col-sm-10">
                    <div id="editorContent"></div>
                </div>
            </div>
            <div class="mb-3 row site-content-item">
                <label for="inputCategory" class="col-sm-2 col-form-label">Nhóm bài viết:</label>
                <div class="col-sm-10">
                    <select class="form-select" aria-label="Default select example">
                        <option selected>Giới thiệu</option>
                        <option value="1">One</option>
                        <option value="2">Two</option>
                        <option value="3">Three</option>
                    </select>
                </div>
            </div>
            <div class="mb-3 row site-content-item">
                <label for="inputType" class="col-sm-2 col-form-label">Loại bài viết:</label>
                <div class="col-sm-10">
                    <select class="form-select" aria-label="Default select example">
                        <option selected>Tin tức</option>
                        <option value="1">One</option>
                        <option value="2">Two</option>
                        <option value="3">Three</option>
                    </select>
                </div>
            </div>
            <div class="mb-3 row site-content-item">
                <label for="inputTag" class="col-sm-2 col-form-label">Tag:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputTag" placeholder="Thẻ tag">
                </div>
            </div>
            <div class="mb-3 row site-content-item">
                <label for="inputAuthor" class="col-sm-2 col-form-label">Tác giả:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputAuthor" placeholder="Tác giả">
                </div>
            </div>
            <div class="mb-3 row site-content-item">
                <label for="inputResourse" class="col-sm-2 col-form-label">Nguồn:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputResourse" placeholder="Nguồn">
                </div>
            </div>
            <div class="mb-3 row site-content-item">
                <label for="inputTimeStart" class="col-sm-2 col-form-label">Thời gian bắt đầu:</label>
                <div class="col-sm-10">
                    <input type="datetime-local" class="form-control" id="inputTimeStart">
                </div>
            </div>
            <div class="mb-3 row site-content-item">
                <label for="inputTimeEnd" class="col-sm-2 col-form-label">Thời gian kết thúc:</label>
                <div class="col-sm-10">
                    <input type="datetime-local" class="form-control" id="inputTimeEnd">
                </div>
            </div>
            <div class="mb-3 row site-content-item">
                <label for="inputStatus" class="col-sm-2 col-form-label form-check-label">Hiển thị:</label>
                <div class="col-sm-10 d-flex align-items-center">
                    <input class="form-check-input" type="checkbox" value="" id="inputStatus">
                </div>
            </div>
        </div>
    
        <div class="site-content-footer">
            <div class="button-admin">
                <a class="button-admin-link" href="#">Lưu lại</a>
            </div>
            <div class="button-admin">
                <a asp-controller="Post" asp-action="Index" class="button-admin-link">Quay lại</a>
            </div>
        </div>
    </form>
</div>

<script>
    ClassicEditor
        .create(document.querySelector('#editorContent'))
        .then(editor => {
            console.log(editor);
        })
        .catch(error => {
            console.error(error);
        });
</script>